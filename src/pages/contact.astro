---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Sir Jello Sandwich">
	<section class="py-16 bg-white">
		<div class="max-w-2xl mx-auto px-4">
			<h1 class="text-4xl font-bold text-center mb-4">Get In Touch</h1>
			<p class="text-xl text-gray-600 text-center mb-8">Questions? Collaborations? Just want to say hi?</p>
			
			<form class="space-y-6">
				<div>
					<label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name</label>
					<input type="text" id="name" name="name" required 
						class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" />
				</div>
				
				<div>
					<label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
					<input type="email" id="email" name="email" required 
						class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" />
				</div>
				
				<div>
					<label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
					<textarea id="message" name="message" rows="5" required 
						class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent"></textarea>
				</div>
				
				<button type="submit" class="w-full bg-gray-900 text-white py-3 rounded-lg hover:bg-gray-700 transition font-semibold">
					Send Message
				</button>
			</form>
		</div>
	</section>
</Layout>
